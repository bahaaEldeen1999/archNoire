@model archNoire.Models.User
@{
    // get info from database not view bags
}

<h2 style="text-align:center">change your info</h2>
@using (Html.BeginForm("UpdateImage",
                            "User",
                            FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
{
    <h2>update your profile picture</h2>
    <img src="" />
    <br />

    <input type="file" name="file" id="file" />
    <input type="submit" value="Upload Image" />


}
@using (Html.BeginForm("userSetting",
                        "User",
                        FormMethod.Post))
{



    @Html.TextBoxFor(m => m.name, new { @class = "form-control", @type = "text", @required = "true", @placeholder = "name" })
    @Html.TextBoxFor(m => m.email, new { @type = "email", @class = "form-control", @required = "true", @placeholder = "email" })

    @Html.TextBoxFor(User => User.password, new { @class = "form-control", @type = "password", @required = "true", @placeholder = "password" })

    <label> gender </label><br /><br />
    <label>male : </label>
    @Html.RadioButtonFor(m => m.gender, "Male",new { @class="radio"})
    <label>  female : </label>
    @Html.RadioButtonFor(m => m.gender, "Female",new { @class = "radio" })

    @Html.TextBoxFor(m => m.location, new { @class = "form-control", @type = "text", @required = "true", @placeholder = "location" })
    @Html.TextBoxFor(m => m.birth_date, new { @class = "form-control", @type = "date", @required = "true" })
    @Html.TextBoxFor(m => m.phone_number, new { @class = "form-control", @type = "text", @required = "true", @placeholder = "phone number" })

    @Html.TextBoxFor(m => m.bio, new { @class = "form-control", @type = "text", @required = "true", @placeholder = "bio" })


    <input type="submit" value="submit changes" />


}


