@model archNoire.Models.User
@{
    Layout = "";
}
@Html.Partial("_userNavBar", null, new ViewDataDictionary { { "id", @ViewBag.userID } })
<h2 style="text-align:center">change your info</h2>
@using (Html.BeginForm("UpdateImage", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h2>update your profile picture</h2>
    <img src="@ViewBag.image" />
    <br />

    <input type="file" name="file" id="file" />
    <input type="submit" value="Upload Image" />


}
@using (Html.BeginForm("userSetting", "User", FormMethod.Post))
{



    @Html.TextBoxFor(m => m.name, new { @class = "form-control", @type = "text", @required = "true", @placeholder = "name", @Value = ViewBag.name })
    @Html.TextBoxFor(m => m.email, new { @type = "email", @class = "form-control", @required = "true", @placeholder = "email", @Value = ViewBag.email })

    @Html.TextBoxFor(User => User.password, new { @class = "form-control", @type = "password", @required = "true", @placeholder = "password" })

    <label> gender </label><br /><br />
    <label>male : </label>
    @Html.RadioButtonFor(m => m.gender, "Male", new { @class = "radio" })
    <label>  female : </label>
    @Html.RadioButtonFor(m => m.gender, "Female", new { @class = "radio" })

    @Html.TextBoxFor(m => m.location, new { @class = "form-control", @type = "text", @required = "true", @placeholder = "location", @Value = ViewBag.location })
    @Html.TextBoxFor(m => m.birth_date, new { @class = "form-control", @type = "date", @required = "true" })
    @Html.TextBoxFor(m => m.phone_number, new { @class = "form-control", @type = "text", @required = "true", @placeholder = "phone number", @Value = ViewBag.phone })

    @Html.TextBoxFor(m => m.bio, new { @class = "form-control", @type = "text", @required = "true", @placeholder = "bio", @Value = ViewBag.bio })


    <input type="submit" value="submit changes" />


}


<style>
    input {
        max-width: 600px;
        min-width: 400px;
        margin-top: 20px;
    }

        input[type="submit"] {
            background: white;
            border: black 2px solid;
            padding: 8px;
            max-width: 170px;
            min-width: 170px;
        }

    div, h2 {
        text-align: left;
    }

    img {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        text-align: center;
    }

    .radio {
        max-width: unset;
        min-width: unset;
        display: inline
    }
</style>

@Html.Partial("_userFooter");
